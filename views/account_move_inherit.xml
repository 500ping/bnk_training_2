<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="account_move_form_inherit" model="ir.ui.view">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="after">
                <widget name="web_ribbon" bg_color="bg-danger" title="Overdue" attrs="{'invisible': [('is_overdue', '!=', True)]}"/>
            </xpath>

            <xpath expr="//field[@name='id']" position="after">
                <field name="is_overdue" invisible="1"/>
            </xpath>

            <xpath expr="//button[@name='preview_invoice']" position="after">
                <!-- Add your fields or attributes here -->
                <button name="action_test_inherit" type="object" string="Test"></button>
            </xpath>
        </field>
    </record>

</odoo>